{
  "name": "@studiometa/eslint-config",
  "version": "3.1.3",
  "description": "ESLint Configuration",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:default && npm run test:legacy && npm run test:build-files && npm run test:vue",
    "test:default": "eslint --no-eslintrc -c ./test/default/.eslintrc.js ./test/default/ --ext=.js,.vue",
    "test:legacy": "eslint --no-eslintrc -c ./test/legacy/.eslintrc.js ./test/legacy/ --ext=.js,.vue",
    "test:build-files": "eslint --no-eslintrc -c ./test/build-files/.eslintrc.js ./test/build-files/ --ext=.mjs,.js,.vue",
    "test:vue": "eslint --no-eslintrc -c ./test/vue/.eslintrc.js ./test/vue/ --ext=.vue",
    "lint": "eslint src/",
    "fix": "eslint --fix src/",
    "eslint-config": "eslint --print-config test/default/index.js --config src/index.js",
    "eslint-check": "eslint --print-config test/default/index.js --config src/index.js | eslint-config-prettier-check",
    "eslint-config-legacy": "eslint --print-config test/legacy/index.js --config src/legacy.js",
    "eslint-check-legacy": "eslint --print-config test/legacy/index.js --config src/legacy.js | eslint-config-prettier-check"
  },
  "author": "Studio Meta <agence@studiometa.fr> (https://www.studiometa.fr)",
  "contributors": [
    "Titouan Mathis <titouan@studiometa.fr>"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/*",
    "readme.md"
  ],
  "license": "MIT",
  "dependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.24.1"
  },
  "devDependencies": {
    "@studiometa/prettier-config": "^4.0.0",
    "@types/node": "^20.12.7",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "vue": "^3.4.21"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "prettier": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiometa/eslint-config.git"
  }
}
